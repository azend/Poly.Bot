class Poly.Bot.AutoJoin : Poly.Bot.Module {
	function AutoJoin() {
		this.Module("AutoJoin");
	}

	function Init(Bot) {
		Bot.On('Connected', this.OnConnected);
	}

	function OnConnected() {
		foreach (Chan in this.AutoJoin) {
			Pass = Chan.Value.Password;

			if (!Pass)
				Pass = '';

			this.JoinChannel(Chan.Key, Pass);
		}
	}
}